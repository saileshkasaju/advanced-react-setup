{
  "name": "advanced-react",
  "version": "1.0.0",
  "description": "Advanced React",
  "main": "lib/server.js",
  "author": "Sailesh Kasaju",
  "license": "MIT",
  "scripts": {
    "dev":
      "NODE_PATH=./lib pm2 start lib/server.js --watch --interpreter babel-node --name appDev",
    "webpack": "webpack -wd",
    "test": "jest --watch",
    "verify-tests": "jest --coverage",
    "build-webpack": "webpack -p",
    "build-node": "babel lib -d build --copy-files",
    "start-prod": "NODE_ENV=production NODE_PATH=./build PORT=80 pm2 start build/server.js -i max --name appProd",    
    "start":
      "NODE_ENV=production NODE_PATH=./build PORT=80 node build/server.js"
  },
  "babel": {
    "presets": [
      "react",
      ["env", { "targets": { "node": "current" } }],
      "stage-2"
    ],
    "plugins": ["transform-class-properties", "transform-object-rest-spread"]
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.0",
    "eslint": "^4.10.0",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.2.1",
    "react-test-renderer": "^16.0.0"
  },
  "dependencies": {
    "axios": "0.17.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "lodash.debounce": "4.0.8",
    "lodash.pickby": "4.6.0",
    "pm2": "^2.7.2",
    "prop-types": "15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "webpack": "^3.8.1"
  }
}
